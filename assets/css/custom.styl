/*******************************
        Stack Labels
*******************************/
.card .stack-tags .labels .label
  margin 0 !important
  display inline-block
  bottom 0
  float right
  -webkit-transition .3s ease all
  transition .3s ease all

.card .stack-tags .labels .label:last-child
  border-top-left-radius 5px

.card .stack-tags .tag-bootstrap
  background bootstrap-purple
  color bootstrap-lavendar

.card .stack-tags .tag-buddypress
  background buddypress-orange
  color buddypress-black

.card .stack-tags .tag-express
  background express-grey
  color express-black

.card .stack-tags .tag-ghost
  background #718087
  color #212425

.card .stack-tags .tag-javascript
  background #FAC552
  color #AE7905

.card .stack-tags .tag-keystone
  background keystone-blue
  color white

.card .stack-tags .tag-node
  background #80BD01
  color #D9FE8C

.card .stack-tags .tag-semantic
  background semantic-teal
  color white

.card .stack-tags .tag-wordpress
  background wordpress-blue
  color white

.card .stack-tags .tag-woocommerce
  background woocommerce-purple
  color woocommerce-grey

.card .meta-tags a:hover
  color #FFF

